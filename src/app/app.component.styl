$normal-color=#87918F

header
  content ""
  width 100%
  height 480px
  background-image url('/assets/img_HEADER.svg')
  background-size cover
  background-position center
  background-repeat no-repeat

.menus
  display flex
  align-items center
  justify-content space-between
  list-style-type none
  width 80%
  margin 20px auto 0 auto

  a
    img
      width 200px
      height 50px

section
  margin-top 128px
  width 100%

  h2.header
    margin 0 auto
    width 256px
    position relative

    &:after
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      content ""
      border-bottom 3px solid $normal-color

    img
      width 100%
      height 64px

  .content
    width 50%
    margin 48px auto 0 auto

section.profile
  .content
    display grid
    grid-template-columns: 20% 80%

    .left
      img
        width 128px
        height 128px
    
    .right
      grid-template-rows: 20% 80%
      font-size 24px
      margin-left 5px

      .name
        font-family 'yutapon-heavy'


section.skill
  .content
    width 60%
    font-family 'yutapon-heavy'
    font-size 20px

section.sns
  .content
    ul
      display flex
      align-items center
      justify-content space-between
      list-style-type none
      width 50%
      margin 20px auto 0 auto

    a
      img
        width 64px
        height 64px
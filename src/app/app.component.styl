$normal-color=#87918F

header
  content ""
  width 100%
  height 0
  padding-top 46.25%
  background-image url('/assets/img_header.png')
  background-size cover
  background-position center top
  background-repeat no-repeat

.main
  max-width 800px
  margin 0 auto

.menus
  display flex
  align-items center
  justify-content space-between
  list-style-type none
  width 80%
  margin 20px auto 0 auto

  li
    margin-left 20px

  a
    img
      width 100%
      height auto

section
  margin-top 10vw
  width 100%

  h2.header
    margin 0 auto
    width 30%
    height auto
    position relative

    &:after
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      content ""
      border-bottom 3px solid $normal-color

    img
      width 100%
      height 64px

  .content
    width 80%
    min-width 300px
    margin 5vw auto 0 auto


section.sns

  margin-bottom 10vw

  .content

    max-width 400px
    
    ul
      display flex
      align-items center
      justify-content space-between
      list-style-type none
      margin 20px auto 0 auto

    a
      img
        width 100%
        max-width 48px
        height auto

@media(max-width: 500px)
  section.profile
    .content
      .right
        font-size 19px
  
  section.skill
    .content
      font-size 20px

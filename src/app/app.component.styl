$normal-color=#87918F
$bg-color=#ffffff

header
  content ""
  width 100%
  height 0
  padding-top 46.25%
  background-image url('/assets/img_header.png')
  background-size cover
  background-position center top
  background-repeat no-repeat

.main
  max-width 800px
  margin 0 auto

.menu-wrapper
  position sticky
  top 0px
  will-change transform
  margin-top -20px
  background-color $bg-color
  z-index 999

.menus
  display flex
  align-items center
  justify-content space-between
  list-style-type none
  width 80%
  margin 20px auto 0 auto

  li
    margin-left 20px

  a
    img
      width 100%
      height auto

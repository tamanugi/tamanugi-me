section
  margin-top 10vw
  width 100%

  h2.header
    margin 0 auto
    width 30%
    height auto
    position relative

    &:after
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      content ""
      border-bottom 3px solid $normal-color

    img
      width 100%
      height 64px

  .content
    width 80%
    min-width 300px
    margin 5vw auto 0 auto
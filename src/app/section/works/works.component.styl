@import "../section.styl"

.content
  ul
    display flex
    overflow-x auto

  .card 
    margin 5px
    width 350px
    background #fff
    
    border-radius 5px
    box-shadow 0 2px 5px #ccc

  .card-img-wrapper
    text-align: center

    .card-img
      border-radius 5px 5px 0 0
      max-width 100%
      height auto
  
  .card-content
    padding 20px

  .card-title 
    font-size 20px
    margin-bottom 20px
    text-align center
    color #333

  .card-text 
    color #777
    font-size 14px
    line-height 1.5

  .card-link
    text-align center
    border-top 1px solid #eee
    padding 20px

    a
      text-decoration none
      color #0bd
      margin 0 10px

      &:hover
        color #0090aa